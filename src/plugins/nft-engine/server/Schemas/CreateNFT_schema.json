{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "uploadIpfsFiles": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "base64data": {
              "type": "string"
            },
            "setMetadataPath": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "base64data",
            "setMetadataPath"
          ]
        }
      ],
      "additionalItems": true
    },
    "nftMintOrder": {
      "type": "object",
      "properties": {
        "sendAddress": {
          "type": "string"
        },
        "blockchain": {
          "type": "string"
        },
        "tokenId": {
          "type": "string",
          "pattern": "^[0-9]{1,32}$"
        },
        "collectionName": {
          "type": "string"
        },
        "symbol": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9]{1,30}$"
        },
        "royalties": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "address": {
                  "type": "string"
                },
                "splitRoyaltyRate": {
                  "type": "number"
                },
                "fixedValue": {
                  "type": "number"
                }
              },
              "additionalProperties": false,
              "required": [
                "address",
                "splitRoyaltyRate"
              ]
            }
          ],
          "additionalItems": true
        }
      },
      "additionalProperties": false,
      "required": [
        "sendAddress",
        "blockchain",
        "tokenId",
        "collectionName",
        "symbol"
      ]
    },
    "nftMetadata": {
      "type": "object",
      "additionalProperties": true
    },
    "webhooks":{
      "type": "object",
      "properties": {
        "completed": {
          "type": "string"
        },
        "progress": {
          "type": "string"
        },
        "failed": {
          "type": "string"
        },
        "unrecoverableFatalError": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "completed"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "nftMintOrder",
    "nftMetadata"
  ]
}
